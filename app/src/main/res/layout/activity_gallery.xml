<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:alwaysDrawnWithCache="false">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="#792929"
        android:id="@+id/imageView2">
    </ImageView>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:scrollbars="none"

        android:layout_alignTop="@+id/username"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2">

    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User"
        android:textSize="20dp"
        android:id="@+id/username"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tableLayout"
        android:layout_alignEnd="@+id/tableLayout"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/username"
        android:src="@mipmap/profile_picture"
        android:scaleType="center" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"  android:stretchColumns="*"
        android:gravity="center"
        android:id="@+id/tableLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tableLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Badges: "
                android:textSize="20dp"
                android:id="@+id/badges"
                android:layout_above="@+id/tableLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="bottom" />
            <ImageView
                android:id="@+id/ImageView_10"
                android:layout_toRightOf="@+id/textView2"
                android:layout_above="@+id/tableLayout"
                android:src="@mipmap/trophy_1"
                android:scaleType="centerInside"
                android:contentDescription="Image_1" />
            <ImageView
                android:id="@+id/ImageView_11"
                android:layout_toRightOf="@+id/ImageView_10"
                android:layout_above="@+id/tableLayout"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/trophy_2"
                android:scaleType="centerInside" />

        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/ImageView_1"
                android:padding="18dip"
                android:src="@mipmap/book_tb"/>

            <ImageView
                android:id="@+id/ImageView_2"
                android:layout_marginRight="20dp"
                android:padding="18dip"
                android:src="@mipmap/buy_code"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/hidden_lib"
                android:layout_marginRight="10dp"
                android:src="@mipmap/lib_hide"
                android:padding="18dp"
                android:hapticFeedbackEnabled="true"
                android:scaleType="centerCrop" />


        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
           >

            <ImageView
                android:id="@+id/ImageView_4"
                android:padding="18dip"
                android:src="@mipmap/book_tb"/>

            <ImageView
                android:id="@+id/ImageView_5"
                android:layout_marginRight="20dp"
                android:padding="18dip"
                android:src="@mipmap/book_tb"/>

            <ImageView
                android:id="@+id/ImageView_6"
                android:padding="18dip"
                android:layout_marginRight="10dp"
                android:src="@mipmap/book_tb" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/ImageView_7"
                android:padding="18dip"
                android:src="@mipmap/book_tb"/>

            <ImageView
                android:id="@+id/ImageView_8"
                android:layout_marginRight="20dp"
                android:padding="18dip"
                android:src="@mipmap/book_tb"/>

            <ImageView
                android:id="@+id/ImageView_9"
                android:layout_marginRight="10dp"
                android:padding="18dip"
                android:src="@mipmap/book_tb"/>

        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:baselineAligned="false">
            <EditText
                android:id="@+id/Code"
                android:text="ENTER CODE"
                android:textSize="20dp"
                android:paddingTop="20dp"
                android:inputType="text" />



        </TableRow>

    </TableLayout>

</RelativeLayout>






